{{#if experience}}
    <div class="section">
        <h2>Experience</h2>
        <ul class="item-list">
            {{#each experience}}
            <li>
                <strong>{{jobTitle}}</strong> at {{company}} ({{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}})
                {{#if responsibilities}}
                <ul class="sub-list">
                    {{#each responsibilities}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{/if}}
                {{#if projects}}
                <div class="sub-section">
                    <strong>Projects:</strong>
                    <ul class="sub-list">
                        {{#each projects}}
                        <li>
                            <strong>{{name}}</strong>{{#if description}}: {{description}}{{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
                {{#if achievements}}
                <div class="sub-section">
                    <strong>Achievements:</strong>
                    <ul class="sub-list">
                        {{#each achievements}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </div>
{{/if}}