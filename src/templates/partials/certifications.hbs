{{#if certifications}}
    <div class="section">
        <h2>Certifications</h2>
        <ul class="item-list">
            {{#each certifications}}
            <li>
                <strong>{{name}}</strong> - {{issuingOrganization}} ({{year}})
            </li>
            {{/each}}
        </ul>
    </div>
{{/if}}